<div dir="rtl" class="form form-group form-inline d-flex align-items-start">
    <h2>
        <label class="form-label form-group text-right">הוספת בוגר חדש:</label>
    </h2>
    <input type="file" id="image">
    <button id="imageReset"class="btn btn-secondary">X</button>
    <input type="text" id="firstName" placeholder="שם פרטי" class="form-control form-group text-center">
    <input type="text" id="lastName" placeholder="שם משפחה" class="form-control form-group text-center">
    <input type="text" id="email" placeholder="אימייל" class="form-control form-group text-center">
    <input type="text" id="phone" placeholder="טלפון" class="form-control form-group text-center">
    <div class="d-flex flex-column align-items-baseline" id="subjectsList">

    </div>
    <textarea id="desc" placeholder="description"></textarea>
    <button class="btn btn-info" id="addAlumni">צור</button>
    <button class="btn btn-info" type="reset">איפוס</button>
</div>
<div dir="rtl" class="form form-group form-inline d-flex align-items-start">
    <h2>
        <label class="form-label form-group text-right">הוספת תחום דעת חדש:</label>
    </h2>
    <input type="text" id="subject" placeholder="שם תחום הדעת" class="form-control form-group text-center">
    <button class="btn btn-info" id="addSubject">צור</button>
    <button class="btn btn-info" type="reset">איפוס</button>
    <button class="btn btn-info" id="btnUpdateSubject" data-toggle="modal" data-target="#myModal">עדכן</button>
    {{>alumnis}}
