    <div class="modal" id="myModal">
        <div class="modal-dialog">
            <div class="modal-content">

                <!-- Modal Header -->
                <div class="modal-header" dir="rtl">
                    <h4 class="modal-title">שינוי פרטי בוגר</h4>

                </div>

                <!-- Modal body -->
                <div class="modal-body text-right">
                    <form>
                        <div class="form-group">שם פרטי:
                            <input type="text" id="firstNameModal" />
                        </div>
                        <div class="form-group">שם משפחה:
                            <input type="text" id="lastNameModal" />
                        </div>
                        <div class="form-group">אימייל:
                            <input type="text" id="emailModal" />
                        </div>
                        <div class="form-group">טלפון:
                            <input type="text" id="phoneModal" />
                        </div>
                        <div class="from-group">תחומי דעת:
                            <div class="d-flex flex-column align-items-baseline" id="modalList">

                            </div>
                        </div>
                        <div class="form-group">פרטים נוספים:
                            <textarea id="detailsModal"></textarea>
                        </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" data-dismiss="modal">ביטול</button>
                    <button type="button" class="btn btn-success" id="update">עדכון</button>
                </div>
            </div>

            <!-- Modal footer -->


        </div>
    </div>
</div>
